<Application
    x:Class="DjvuApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DjvuApp"
    xmlns:common="using:DjvuApp.Common"
    xmlns:viewModel="using:DjvuApp.ViewModel"
    RequestedTheme="Light">
    <Application.Resources>
        <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFF4F4F4"/>
        <Color x:Key="PhoneAccentColor">#FF6A00FF</Color>
        
        <common:ViewModelLocator x:Key="ViewModelLocator"/>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <common:IsNotNullToVisibilityConverter x:Key="IsNotNullToVisibilityConverter"/>
    </Application.Resources>
</Application>