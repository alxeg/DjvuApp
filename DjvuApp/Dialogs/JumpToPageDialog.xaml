<ContentDialog
    x:Class="DjvuApp.JumpToPageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DjvuApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="JUMP TO PAGE"
    PrimaryButtonText="jump"  
    Loaded="LoadedHandler">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock 
            Style="{StaticResource MessageDialogContentStyle}" 
            TextWrapping="Wrap">
            <TextBlock.Text>
                Type the number of the page you would like to jump to in document.
            </TextBlock.Text>
        </TextBlock>
        <TextBox
            x:Name="pageNumberTextBox"
            Header="Page number"
            InputScope="Number"
            TextChanged="PageNumberTextBox_OnTextChanged"/>
        <TextBlock
            x:Name="totalPagesTextBlock"
            Style="{StaticResource MessageDialogContentStyle}" 
            TextWrapping="Wrap">
            <TextBlock.Text>
                The total number of pages is 256.
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</ContentDialog>
