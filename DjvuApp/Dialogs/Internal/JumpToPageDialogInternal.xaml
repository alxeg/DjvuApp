<ContentDialog
    x:Class="DjvuApp.Dialogs.Internal.JumpToPageDialogInternal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="JUMP TO PAGE"
    FullSizeDesired="True"
    PrimaryButtonText="jump"
    IsPrimaryButtonEnabled="False"
    Loaded="LoadedHandler"
    x:Name="dialog">

    <StackPanel DataContext="{Binding ElementName=dialog}">
        <TextBlock TextWrapping="Wrap">
            <TextBlock.Text>
                Type the number of the page you would like to jump to in document.
            </TextBlock.Text>
        </TextBlock>
        <TextBox
            Header="Page number"
            InputScope="Number"
            Text="{Binding PageNumberText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock TextWrapping="Wrap">
            <Run>
                The total number of pages is
            </Run>
            <Run Text="{Binding PageCount}"/>
        </TextBlock>
    </StackPanel>
</ContentDialog>
