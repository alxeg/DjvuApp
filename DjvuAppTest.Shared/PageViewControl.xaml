<UserControl
    x:Class="DjvuApp.PageViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DjvuApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="pageViewControl">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="ReaderCanvasForeground" Color="White"/>
    </UserControl.Resources>
    
    <Canvas Background="Transparent">
        <Canvas 
            x:Name="blankContentCanvas"
            Opacity="0"
            Width="{Binding Width, ElementName= pageViewControl}" 
            Height="{Binding Height, ElementName=pageViewControl}"
            Background="{StaticResource ReaderCanvasForeground}"/>
        <Canvas 
            x:Name="thumbnailContentCanvas"
            Opacity="0"
            Width="{Binding Width, ElementName= pageViewControl}" 
            Height="{Binding Height, ElementName=pageViewControl}"
            Background="Transparent"/>
        <Canvas 
            x:Name="contentCanvas"
            Opacity="0"
            Width="{Binding Width, ElementName= pageViewControl}" 
            Height="{Binding Height, ElementName=pageViewControl}"
            Background="Transparent"/>
    </Canvas>
</UserControl>
