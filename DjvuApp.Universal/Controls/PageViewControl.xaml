<UserControl
    x:Class="DjvuApp.Controls.PageViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PointerPressed="PageViewControl_OnPointerPressed"
    PointerMoved="PageViewControl_OnPointerMoved"
    PointerReleased="PageViewControl_OnPointerReleased">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="ReaderCanvasForeground" Color="White"/>
        <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{ThemeResource SystemAccentColor}" Opacity="0.3"/>
    </UserControl.Resources>

    <Canvas Background="Transparent">
        <Canvas 
            x:Name="blankContentCanvas"
            Width="{x:Bind Width, Mode=OneWay}" 
            Height="{x:Bind Height, Mode=OneWay}"
            Background="{StaticResource ReaderCanvasForeground}"/>
        <Canvas 
            x:Name="thumbnailContentCanvas"
            Width="{x:Bind Width, Mode=OneWay}" 
            Height="{x:Bind Height, Mode=OneWay}"
            Background="Transparent"/>
        <Canvas 
            x:Name="contentCanvas"
            Width="{x:Bind Width, Mode=OneWay}" 
            Height="{x:Bind Height, Mode=OneWay}"
            Background="Transparent"/>
    </Canvas>
</UserControl>
